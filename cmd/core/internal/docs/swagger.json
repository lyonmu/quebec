    "host": "http://localhost:59024",
    "basePath": "/core/api",
    "paths": {
        "/v1/system/captcha": {
            "get": {
                "description": "获取验证码,返回包括随机数id,base64,验证码长度",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "系统管理"
                ],
                "summary": "获取验证码",
                "responses": {
                    "200": {
                        "description": "50000,success",
                        "schema": {
                            "allOf": [
                                {
                                    "$ref": "#/definitions/code.Response"
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "code": {
                                            "type": "number"
                                        },
                                        "data": {
                                            "$ref": "#/definitions/response.CaptchaResponse"
                                        },
                                        "message": {
                                            "type": "string"
                                        }
                                    }
                                }
                            ]
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "code.Response": {
            "type": "object",
            "properties": {
                "code": {
                    "type": "integer",
                    "example": 50000
                },
                "data": {},
                "message": {
                    "type": "string",
                    "example": "success"
                }
            }
        },
        "response.CaptchaResponse": {
            "type": "object",
            "properties": {
                "id": {
                    "description": "验证码id",
                    "type": "string",
                    "example": "1234567890"
                },
                "length": {
                    "description": "验证码长度",
                    "type": "integer",
                    "example": 4
                },
                "pictures": {
                    "description": "验证码图片",
                    "type": "string",
                    "example": "base64"
                }
            }
        }
    },
    "securityDefinitions": {
        "ApiKeyAuth": {
            "description": "token认证",
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    }
}